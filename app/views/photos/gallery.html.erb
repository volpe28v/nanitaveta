<script>
$(function() {
  $("#thumbnailList img.eating_out").MyThumbnail({
    thumbWidth:100,
    thumbHeight:100,
    backgroundColor:"#ccc",
    imageDivClass:"eating_out"
  });

  $("#thumbnailList img.eating_in").MyThumbnail({
    thumbWidth:100,
    thumbHeight:100,
    backgroundColor:"#ccc",
    imageDivClass:"eating_in"
  });


});
</script>

<style type="text/css">
#thumbnailList p {
    position: absolute;
    margin: 0px;
    margin-left: 2px;
    margin-top: 71px;
    z-index:2;
    background-Color: #555555;
    color: #ffffff;
    width: 80px;
    text-align: center;
    padding-top: 5px;
    padding-bottom: 5px;
    opacity:.8;
    display: none;
    clear: none;
    font-size: 10pt;
}
</style>

<div id='thumbnailList'>
<% @photos.each do |p| %>
  <%= link_to( image_tag( "/photos/" + p.path, :class => p.is_eating_out? ? "eating_out" : "eating_in" ), user_photo_path(@user,p) ) %>
<% end %>
</div>

